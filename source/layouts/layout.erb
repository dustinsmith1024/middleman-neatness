    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="My super awesome site, with bells AND whistles.">
    <title><%= data.page.title || "Look Portrait" %></title>
    <!--[if lte IE 8]>
      <%= stylesheet_link_tag "ie" %>
    <![endif]-->
