    <%= javascript_include_tag  "vendor/modernizr-2.6.1-respond-1.1.0.min" %>
  </head>
  
  <body class="<%= page_classes %>">
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
    <![endif]-->
    <header>
        <div class="brand">
            <h1 class="title">
                <% link_to '/' do %>
                    <%= image_tag 'logo-blue.png', :id=>'logo', :class=>'logo', :alt=>'Look Portrait', :data => {:replace_svg=>true} %>
                <% end %>
            </h1>
        </div>
        <nav>
            <ul>
                <li><a <% if data.page.title == 'Calendar' %>class="active"<% end %> href="/">Home</a></li>
                <li><a <% if data.page.title == 'Calendar' %>class="active"<% end %> href="/calendar.html">Calendar</a></li>
                <li><a <% if data.page.title == 'Blog' %>class="active"<% end %> href="/blog.html">Blog</a></li>
                <li><a <% if data.page.title == 'Contact' %>class="active"<% end %> href="/contact.html">Resources</a></li>
            </ul>
      </nav>
    </header>

    <div class="main-container">
      <%= yield %>
    </div>

    <footer class="wrapper">
        <% link_to '/' do %>
          <%= image_tag 'logo-dark.png', :id=>'footer-logo', :class=>'footer-logo', :alt=>'Logo', :data=>{ :replace_svg=>'true' } %>
        <% end %>
        <p>&copy; <%= DateTime.now.year %> | Somewhere, USA | 867-5309</p>
        <p><%= mail_to 'you@example.com' %></p>
    </footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/javascripts/vendor/jquery-1.8.2.min.js"><\/script>')</script>
    <!--[if lte IE 8]>
      <%= javascript_include_tag  "vendor/selectivizr.min" %>
    <![endif]-->
